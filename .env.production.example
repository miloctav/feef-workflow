# ============================================
# FEEF Workflow - Production Environment
# ============================================
# This is a template file for production deployment
# Copy this to .env on your server and fill in real values
# NEVER commit .env with real credentials to Git!

# PostgreSQL Configuration
# IMPORTANT: Use strong, unique passwords in production
POSTGRES_DB=feef_db
POSTGRES_USER=feef_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Database URL for application (container-to-container communication)
# This will be auto-generated by docker-compose based on POSTGRES_* vars
# You typically don't need to change this unless using external database
DATABASE_URL=postgresql://feef_user:CHANGE_ME_STRONG_PASSWORD_HERE@postgres:5432/feef_db

# Garage Configuration (S3-compatible object storage)
# IMPORTANT: After first docker-compose up, the garage-init service will display
# generated credentials. Copy them here and restart the app service.
GARAGE_ENDPOINT=http://garage:3900
GARAGE_REGION=garage
GARAGE_ACCESS_KEY=WILL_BE_GENERATED_BY_INIT_SCRIPT
GARAGE_SECRET_KEY=WILL_BE_GENERATED_BY_INIT_SCRIPT
GARAGE_BUCKET=feef-storage
GARAGE_KEY_NAME=feef-app-key

# Garage internal secrets (for garage.toml configuration)
# CRITICAL: Will be auto-generated during setup
GARAGE_RPC_SECRET=WILL_BE_AUTO_GENERATED
GARAGE_ADMIN_TOKEN=WILL_BE_AUTO_GENERATED
GARAGE_METRICS_TOKEN=WILL_BE_AUTO_GENERATED

# Domain Configuration (for SSL certificate generation)
# Replace with your actual domain name
DOMAIN=your-domain.com
EMAIL=your-email@example.com

# Session Configuration (nuxt-auth-utils)
# CRITICAL: Will be auto-generated during setup
# Must be at least 32 characters long
NUXT_SESSION_PASSWORD=WILL_BE_AUTO_GENERATED

# JWT Configuration (for password reset tokens)
# CRITICAL: Will be auto-generated during setup
# Must be at least 32 characters long
JWT_SECRET=WILL_BE_AUTO_GENERATED

# Seed Token (for API seed endpoint)
# IMPORTANT: Use a strong, unique token in production
# This token is required to call the /api/seed endpoint
SEED_TOKEN=CHANGE_ME_SECURE_SEED_TOKEN

# Resend Configuration (Email service)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_YOUR_API_KEY_HERE
RESEND_FROM_EMAIL=FEEF Workflow <noreply@your-domain.com>

# Development Mode
# IMPORTANT: Must be 'false' or commented out in production
# DEV_MODE=false
